@using Suendenbock_App.Models.Domain
@{
    ViewData["Title"] = "T√ºrchen Aktivit√§t";
    var door = (AdventDoor)ViewBag.Door;
    var userChoices = (List<UserAdventChoice>)ViewBag.UserChoices;
    var users = (Dictionary<string, string>)ViewBag.Users;
}

@section Styles {
    <link rel="stylesheet" href="~/css/advent-admin.css" />
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <a asp-action="AdminDashboard" class="btn btn-outline-secondary mb-3">
                ‚Üê Zur√ºck zum Dashboard
            </a>
            <h1 class="display-4">üéÑ T√ºrchen @door.DayNumber - Details</h1>
        </div>
    </div>

    <!-- T√ºrchen-Info -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">üìã T√ºrchen-Informationen</h5>
                </div>
                <div class="card-body">
                    <p><strong>Tag:</strong> @door.DayNumber</p>
                    <p><strong>Typ:</strong>
                        @if (door.DoorType == DoorType.Simple)
                        {
                            <span class="badge bg-secondary">üìÑ Simple (HTML)</span>
                        }
                        else if (door.DoorType == DoorType.Choice)
                        {
                            <span class="badge badge-info">üé≠ Choice (Emma/Kasimir)</span>
                        }
                        else if (door.DoorType == DoorType.DirectAudio)
                        {
                            <span class="badge badge-success">üéµ Direct Audio</span>
                        }
                    </p>
                    <p><strong>Ge√∂ffnet:</strong> @userChoices.Count mal</p>

                    @if (door.DoorType == DoorType.Choice)
                    {
                        var emmaCount = userChoices.Count(c => c.ChoiceIndex == 0);
                        var kasimirCount = userChoices.Count(c => c.ChoiceIndex == 1);
                        var noChoice = userChoices.Count(c => !c.ChoiceIndex.HasValue);

                        <hr />
                        <p><strong>Emma gew√§hlt:</strong> <span class="text-success">@emmaCount</span></p>
                        <p><strong>Kasimir gew√§hlt:</strong> <span class="text-primary">@kasimirCount</span></p>
                        @if (noChoice > 0)
                        {
                            <p><strong>Noch nicht gew√§hlt:</strong> <span class="text-warning">@noChoice</span></p>
                        }
                    }
                </div>
            </div>
        </div>

        <div class="col-md-8">
            @if (door.DoorType == DoorType.Choice && userChoices.Any())
            {
                var emmaCount = userChoices.Count(c => c.ChoiceIndex == 0);
                var kasimirCount = userChoices.Count(c => c.ChoiceIndex == 1);
                var total = emmaCount + kasimirCount;
                var emmaPercentage = total > 0 ? (emmaCount * 100.0 / total) : 0;
                var kasimirPercentage = total > 0 ? (kasimirCount * 100.0 / total) : 0;

                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">üìä Auswahl-Verteilung</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center mb-3">
                            <div class="col-6">
                                <h2 class="text-success">üëß Emma</h2>
                                <h1 class="display-3">@Math.Round(emmaPercentage, 1)%</h1>
                                <p class="text-muted">@emmaCount von @total Auswahlen</p>
                            </div>
                            <div class="col-6">
                                <h2 class="text-primary">üêâ Kasimir</h2>
                                <h1 class="display-3">@Math.Round(kasimirPercentage, 1)%</h1>
                                <p class="text-muted">@kasimirCount von @total Auswahlen</p>
                            </div>
                        </div>
                        <div class="progress" style="height: 30px;">
                            <div class="progress-bar bg-success" role="progressbar"
                                 style="width: @emmaPercentage%">
                                Emma
                            </div>
                            <div class="progress-bar bg-primary" role="progressbar"
                                 style="width: @kasimirPercentage%">
                                Kasimir
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- User-Aktivit√§ten -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">üë• User-Aktivit√§ten (@userChoices.Count)</h5>
                </div>
                <div class="card-body">
                    @if (userChoices.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Username</th>
                                        <th>Ge√∂ffnet am</th>
                                        @if (door.DoorType == DoorType.Choice)
                                        {
                                            <th>Auswahl</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        var counter = 1;
                                    }
                                    @foreach (var choice in userChoices)
                                    {
                                        <tr>
                                            <td>@counter</td>
                                            <td>
                                                <strong>@(users.ContainsKey(choice.UserId) ? users[choice.UserId] : "Unbekannt")</strong>
                                            </td>
                                            <td>
                                                @choice.ChosenAt.ToString("dd.MM.yyyy HH:mm:ss")
                                            </td>
                                            @if (door.DoorType == DoorType.Choice)
                                            {
                                                <td>
                                                    @if (choice.ChoiceIndex.HasValue)
                                                    {
                                                        if (choice.ChoiceIndex == 0)
                                                        {
                                                            <span class="badge badge-success badge-lg">üëß Emma</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge badge-primary badge-lg">üêâ Kasimir</span>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-warning">‚è≥ Noch nicht gew√§hlt</span>
                                                    }
                                                </td>
                                            }
                                        </tr>
                                        counter++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <strong>‚ÑπÔ∏è Noch keine Aktivit√§t</strong><br />
                            Dieses T√ºrchen wurde noch von keinem User ge√∂ffnet.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
