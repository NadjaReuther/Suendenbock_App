@using Suendenbock_App.Models.Domain
@{
    ViewData["Title"] = "Adventskalender Admin";
    var playerStats = (List<dynamic>)ViewBag.PlayerStats;
    var doors = (List<AdventDoor>)ViewBag.Doors;
    var firstOpeners = (Dictionary<int, dynamic>)ViewBag.FirstOpeners;
}

@section Styles {
    <link rel="stylesheet" href="~/css/advent-admin.css" />
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4">üéÑ Adventskalender-√úbersicht</h1>
        </div>
    </div>

    <!-- Player-Statistik-Karten -->
    <div class="row mb-4">
        @foreach (var player in playerStats)
        {
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card player-stat-card" style="background-color: @player.Farbcode; border: 2px solid rgba(0,0,0,0.2);">
                    <div class="card-body text-white">
                        <h4 class="card-title text-white mb-3">
                            @{
                                var SpielerName = player.UserName.Substring(0,player.UserName.IndexOf('@'));
                            }
                            <strong>@SpielerName</strong>
                        </h4>
                        <div class="text-center mb-2">
                            <h6 class="text-white mb-1">
                                @if (player.Preference == "Keine Auswahl")
                                {
                                    <span>Keine Auswahl</span>
                                }
                                else if (player.Preference == "Emma")
                                {
                                    <span>unterst√ºtzt Emma</span>
                                }
                                else if (player.Preference == "Kasimir")
                                {
                                    <span>unterst√ºtzt Kasimir</span>
                                }
                                else
                                {
                                    <span>unterst√ºtzt Beide</span>
                                }
                            </h6>
                        </div>
                        @if (player.Total > 0)
                        {
                            var emmaPercent = (player.EmmaCount * 100.0 / player.Total);
                            var kasimirPercent = (player.KasimirCount * 100.0 / player.Total);
                            <div class="player-choice-details text-white text-center">
                                <small>
                                    Emma: @player.EmmaCount (@Math.Round(emmaPercent, 0)%) ----
                                    Kasimir: @player.KasimirCount (@Math.Round(kasimirPercent, 0)%)
                                </small>
                            </div>
                        }
                        else
                        {
                            <div class="player-choice-details text-white text-center">
                                <small>
                                    bisher keine Auswahl
                                </small>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Gesamt-Statistik -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-dark shadow">
                <div class="card-body">
                    @{
                        var totalEmma = (int)ViewBag.TotalEmmaChoices;
                        var totalKasimir = (int)ViewBag.TotalKasimirChoices;
                        var total = (int)ViewBag.TotalChoices;

                        string leader = "";
                        string leaderClass = "";
                        double emmaPercentage = 0;
                        double kasimirPercentage = 0;

                        if (total > 0)
                        {
                            emmaPercentage = (totalEmma * 100.0 / total);
                            kasimirPercentage = (totalKasimir * 100.0 / total);

                            if (totalEmma > totalKasimir)
                            {
                                leader = "üåä Emma ist entschlossener!";
                                leaderClass = "text-primary";
                            }
                            else if (totalKasimir > totalEmma)
                            {
                                leader = "‚è≥ Kasimir ist entschlossener!";
                                leaderClass = "text-warning";
                            }
                            else
                            {
                                leader = "‚öñÔ∏è Beide sind entschlossen!";
                                leaderClass = "text-secondary";
                            }
                        }
                        else
                        {
                            leader = "Noch keine Auswahlen getroffen";
                            leaderClass = "text-muted";
                        }
                    }

                    <div class="row text-center">
                        <div class="col-md-4">
                            <div class="p-3">
                                <h2 class="display-4 text-primary mb-2">üåä @totalEmma</h2>
                                <h5>Emma</h5>
                                @if (total > 0)
                                {
                                    <p class="text-muted">(@Math.Round(emmaPercentage, 1)%)</p>
                                }
                            </div>
                        </div>
                        <div class="col-md-4 d-flex align-items-center justify-content-center">
                            <div class="text-center">
                                <h4 class="@leaderClass mb-3">@leader</h4>
                                <p class="text-muted">Gesamt: <strong>@total</strong> Auswahlen</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3">
                                <h2 class="display-4 text-warning mb-2">‚è≥ @totalKasimir</h2>
                                <h5>Kasimir</h5>
                                @if (total > 0)
                                {
                                    <p class="text-muted">(@Math.Round(kasimirPercentage, 1)%)</p>
                                }
                            </div>
                        </div>
                    </div>

                    @if (total > 0)
                    {
                        <div class="row mt-3">
                            <div class="col-12">
                                <div class="progress" style="height: 30px;">
                                    <div class="progress-bar bg-primary" role="progressbar"
                                         style="width: @(emmaPercentage)%"
                                         aria-valuenow="@totalEmma" aria-valuemin="0" aria-valuemax="@total">
                                        @if (emmaPercentage > 10)
                                        {
                                            <strong>@Math.Round(emmaPercentage, 1)%</strong>
                                        }
                                    </div>
                                    <div class="progress-bar bg-warning" role="progressbar"
                                         style="width: @(kasimirPercentage)%"
                                         aria-valuenow="@totalKasimir" aria-valuemin="0" aria-valuemax="@total">
                                        @if (kasimirPercentage > 10)
                                        {
                                            <strong>@Math.Round(kasimirPercentage, 1)%</strong>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- T√ºrchen-√úbersicht -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">üìã T√ºrchen-√úbersicht</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Tag</th>
                                    <th>Typ</th>
                                    <th>√ñffnungen</th>
                                    <th>Erste √ñffnung</th>
                                    <th>Emma / Kasimir</th>
                                    <th>Aktionen</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var door in doors)
                                {
                                    var openings = door.UserChoices.Count;
                                    var emmaCount = door.UserChoices.Count(c => c.ChoiceIndex == 0);
                                    var kasimirCount = door.UserChoices.Count(c => c.ChoiceIndex == 1);

                                    <tr>
                                        <td>
                                            <strong>Tag @door.DayNumber</strong>
                                        </td>
                                        <td class="text-center">
                                            @if (door.DoorType == DoorType.Simple)
                                            {
                                                <span class="badge bg-secondary">üìÑ Text</span>
                                            }
                                            else if (door.DoorType == DoorType.Choice)
                                            {
                                                <span class="badge bg-info">üé≠ Auswahl</span>
                                            }
                                            else if (door.DoorType == DoorType.DirectAudio)
                                            {
                                                <span class="badge bg-success">üéµ Audio</span>
                                            }
                                        </td>
                                        <td>
                                            @openings
                                        </td>
                                        <td>
                                            @if (firstOpeners.ContainsKey(door.Id))
                                            {
                                                var firstOpener = firstOpeners[door.Id];
                                                <div>
                                                    <strong>ü•á @firstOpener.UserName</strong><br/>
                                                    <small class="text-muted">@firstOpener.OpenedAt.ToString("dd.MM.yyyy HH:mm")</small>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (door.DoorType == DoorType.Choice)
                                            {
                                                <strong>üåä @emmaCount / ‚è≥ @kasimirCount</strong>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-action="DoorActivity" asp-route-doorId="@door.Id"
                                               class="btn btn-sm btn-outline-primary">
                                                üìä Details
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
