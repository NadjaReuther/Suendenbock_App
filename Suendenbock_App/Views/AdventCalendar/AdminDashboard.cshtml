@using Suendenbock_App.Models.Domain
@{
    ViewData["Title"] = "Adventskalender Admin";
    var playerStats = (List<dynamic>)ViewBag.PlayerStats;
    var doors = (List<AdventDoor>)ViewBag.Doors;
    var firstOpeners = (Dictionary<int, dynamic>)ViewBag.FirstOpeners;
}

@section Styles {
    <link rel="stylesheet" href="~/css/advent-admin.css" />
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4">üéÑ Adventskalender-√úbersicht</h1>
        </div>
    </div>

    <!-- Player-Statistik-Karten -->
    <div class="row mb-4">
        @foreach (var player in playerStats)
        {
            <div class="col-md-3 col-sm-6 mb-3">
                <div class="card player-stat-card" style="background-color: @player.Farbcode; border: 2px solid rgba(0,0,0,0.2);">
                    <div class="card-body text-white">
                        <h6 class="card-title text-white mb-3">
                            <strong>@player.UserName</strong>
                        </h6>
                        <div class="text-center mb-2">
                            <h4 class="text-white mb-1">
                                @if (player.Preference == "Keine Auswahl")
                                {
                                    <span>‚è≥ Keine Auswahl</span>
                                }
                                else if (player.Preference == "Emma")
                                {
                                    <span>‚úì Emma</span>
                                }
                                else if (player.Preference == "Kasimir")
                                {
                                    <span>‚úì Kasimir</span>
                                }
                                else
                                {
                                    <span>= Gleich</span>
                                }
                            </h4>
                        </div>
                        @if (player.Total > 0)
                        {
                            var emmaPercent = (player.EmmaCount * 100.0 / player.Total);
                            var kasimirPercent = (player.KasimirCount * 100.0 / player.Total);
                            <div class="player-choice-details text-white">
                                <small>
                                    Emma: @player.EmmaCount (@Math.Round(emmaPercent, 0)%)<br/>
                                    Kasimir: @player.KasimirCount (@Math.Round(kasimirPercent, 0)%)
                                </small>
                            </div>
                        }
                        else
                        {
                            <div class="player-choice-details text-white">
                                <small>
                                    Noch keine Choice-T√ºrchen gew√§hlt
                                </small>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- T√ºrchen-√úbersicht -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">üìã T√ºrchen-√úbersicht</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Tag</th>
                                    <th>Typ</th>
                                    <th>√ñffnungen</th>
                                    <th>Erste √ñffnung</th>
                                    <th>Emma / Kasimir</th>
                                    <th>Aktionen</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var door in doors)
                                {
                                    var openings = door.UserChoices.Count;
                                    var emmaCount = door.UserChoices.Count(c => c.ChoiceIndex == 0);
                                    var kasimirCount = door.UserChoices.Count(c => c.ChoiceIndex == 1);

                                    <tr>
                                        <td>
                                            <strong>Tag @door.DayNumber</strong>
                                        </td>
                                        <td class="text-center">
                                            @if (door.DoorType == DoorType.Simple)
                                            {
                                                <span class="badge bg-secondary">üìÑ Text</span>
                                            }
                                            else if (door.DoorType == DoorType.Choice)
                                            {
                                                <span class="badge bg-info">üé≠ Auswahl</span>
                                            }
                                            else if (door.DoorType == DoorType.DirectAudio)
                                            {
                                                <span class="badge bg-success">üéµ Audio</span>
                                            }
                                        </td>
                                        <td>
                                            @openings
                                        </td>
                                        <td>
                                            @if (firstOpeners.ContainsKey(door.Id))
                                            {
                                                var firstOpener = firstOpeners[door.Id];
                                                <div>
                                                    <strong>ü•á @firstOpener.UserName</strong><br/>
                                                    <small class="text-muted">@firstOpener.OpenedAt.ToString("dd.MM.yyyy HH:mm")</small>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (door.DoorType == DoorType.Choice)
                                            {
                                                <strong>@emmaCount / @kasimirCount</strong>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-action="DoorActivity" asp-route-doorId="@door.Id"
                                               class="btn btn-sm btn-outline-primary">
                                                üìä Details
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
