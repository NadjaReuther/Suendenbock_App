@using Suendenbock_App.Models.Domain
@model List<Monstertyp>
@{
    // Prüfen ob User Admin/God ist
    var isAdmin = User.IsInRole("Gott");
    Layout = isAdmin ? "_AdminLayout" : "_Layout";
}
@section Styles {
    <link href="/css/antique-home.css" rel="stylesheet" />
    <link href="/css/character.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=MedievalSharp&family=Uncial+Antiqua&family=Cinzel:wght@400;600&display=swap" rel="stylesheet">
}

<div class="main-container">
    <!-- Hero Pergament Karten mit echten Daten -->
    <section class="hero-section">
        @foreach (var monstertyp in Model)
        {
            <a class="card-link" asp-controller="Monstertyp" asp-action="MonstertypSheet" asp-route-id="@monstertyp.Id">
                <div class="pergament-card" data-tilt>
                    <div class="card-corner top-left"></div>
                    <div class="card-corner top-right"></div>
                    <div class="card-corner bottom-left"></div>
                    <div class="card-corner bottom-right"></div>
                    <h1 class="card-title">
                        @monstertyp.Name<br />
                        <span style="font-size: 0.7em; color: #8b7355;">
                            (@(monstertyp.Monster?.Count(m => m.encounter) ?? 0)/@(monstertyp.Monster?.Count ?? 0))
                        </span>
                    </h1>
                    <div class="card-content">
                            <img width="104" src="~/assets/wuerfel/@(monstertyp.MonsterwuerfelId).svg" /><br />
                    </div>
                </div>
            </a>
         }
    </section>
</div>
