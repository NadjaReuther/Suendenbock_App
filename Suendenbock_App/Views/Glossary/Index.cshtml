@model List<Suendenbock_App.Models.Domain.GlossaryEntry>

@{
    ViewData["Title"] = "Glossar";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4">üìö Glossar-Verwaltung</h1>
            <p class="text-muted">Verwalte Beschreibungen f√ºr alle Begriffe deines Universums</p>
        </div>
    </div>

    <!-- Suche und Filter -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Index" method="get">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="searchTerm" class="form-label">Suchbegriff</label>
                                <input type="text"
                                       class="form-control"
                                       id="searchTerm"
                                       name="searchTerm"
                                       value="@ViewBag.SearchTerm"
                                       placeholder="Titel oder Beschreibung durchsuchen...">
                            </div>
                            <div class="col-md-4">
                                <label for="entityType" class="form-label">Typ filtern</label>
                                <select class="form-select" id="entityType" name="entityType">
                                    <option value="">Alle Typen</option>
                                    <option disabled>---</option>
                                    <option value="" selected="@(string.IsNullOrEmpty(ViewBag.EntityType) ? "selected" : null)">Freie Eintr√§ge</option>
                                    @foreach (var type in ViewBag.EntityTypes)
                                    {
                                        <option value="@type" selected="@(ViewBag.EntityType == type ? "selected" : null)">@type</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-2 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="bi bi-search"></i> Suchen
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Aktionen -->
    <div class="row mb-3">
        <div class="col-12">
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Neuer Eintrag
            </a>
        </div>
    </div>

    <!-- Ergebnisse -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Glossar-Eintr√§ge (@Model.Count)</h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Titel</th>
                                        <th>Typ</th>
                                        <th>Beschreibung</th>
                                        <th style="width: 200px;">Aktionen</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var entry in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@entry.Title</strong>
                                            </td>
                                            <td>
                                                @if (string.IsNullOrEmpty(entry.EntityType))
                                                {
                                                    <span class="badge bg-secondary">Frei</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-info">@entry.EntityType</span>
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @(entry.Description.Length > 100
                                                        ? entry.Description.Substring(0, 100) + "..."
                                                        : entry.Description)
                                                </small>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Show" asp-route-id="@entry.Id" class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-eye"></i> Anzeigen
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@entry.Id" class="btn btn-sm btn-outline-warning">
                                                        <i class="bi bi-pencil"></i> Bearbeiten
                                                    </a>
                                                    <button type="button"
                                                            class="btn btn-sm btn-outline-danger"
                                                            onclick="deleteEntry(@entry.Id, '@entry.Title')">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center p-5 text-muted">
                            <i class="bi bi-search" style="font-size: 3rem;"></i>
                            <p class="mt-3">Keine Eintr√§ge gefunden</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Ersten Eintrag erstellen
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Form (hidden) -->
<form id="deleteForm" method="post" style="display: none;">
    @Html.AntiForgeryToken()
</form>

@section Scripts {
    <script>
        function deleteEntry(id, title) {
            if (confirm(`M√∂chtest du den Eintrag "${title}" wirklich l√∂schen?`)) {
                var form = document.getElementById('deleteForm');
                form.action = '@Url.Action("Delete", "Glossary")/' + id;
                form.submit();
            }
        }
    </script>
}
