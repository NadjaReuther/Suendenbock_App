@model Suendenbock_App.Models.ViewModels.EditMapViewModel
@{
    ViewData["Title"] = "Karte bearbeiten";
}

<div class="admin-container">
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card shadow">
                    <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="mb-0"><i class="fas fa-edit"></i> Karte bearbeiten</h3>
                            <button type="button" class="btn btn-sm btn-light" onclick="toggleHelpPanel()" title="Hilfe anzeigen">
                                <i class="fas fa-question-circle"></i> Hilfe
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <!-- Current Image Preview -->
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="mb-4">
                                <label class="form-label"><i class="fas fa-image"></i> Aktuelles Kartenbild:</label>
                                <div>
                                    <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 100%; max-height: 300px; border: 2px solid #d4c4a8; border-radius: 8px;" />
                                </div>
                            </div>
                        }

                        <form asp-action="EditMap" method="post" enctype="multipart/form-data">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="ImageUrl" />
                            <input type="hidden" asp-for="CreatedAt" />
                            <input type="hidden" asp-for="ParentMapId" />

                            <!-- Act Selection -->
                            <div class="mb-3">
                                <label asp-for="ActId" class="form-label">
                                    <i class="fas fa-book"></i> Zu welchem Act geh√∂rt diese Karte? *
                                </label>
                                <select asp-for="ActId" class="form-select" required>
                                    <option value="">-- Act ausw√§hlen --</option>
                                    @foreach (var act in Model.Acts)
                                    {
                                        <option value="@act.Id" selected="@(act.Id == Model.ActId)">Act @act.ActNumber: @act.Name</option>
                                    }
                                </select>
                            </div>

                            <!-- Map Name -->
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label">
                                    <i class="fas fa-signature"></i> Karten-Name *
                                </label>
                                <input asp-for="Name" class="form-control" placeholder="z.B. Weltkarte von B√∂hmen" required />
                                <small class="text-muted">Der Hauptname der Karte</small>
                            </div>

                            <!-- Map Type -->
                            <div class="mb-4">
                                <label class="form-label">
                                    <i class="fas fa-layer-group"></i> Karten-Typ *
                                </label>
                                @if (Model.ChildMaps.Any())
                                {
                                    <div class="alert alert-warning">
                                        <i class="fas fa-exclamation-triangle"></i> Diese Karte hat <strong>@Model.ChildMaps.Count Detail-Karte(n)</strong> und kann nicht zu einer Detail-Karte ge√§ndert werden.
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="IsWorldMap" id="isWorldMapTrue" value="true" checked disabled>
                                        <label class="form-check-label" for="isWorldMapTrue">
                                            <strong>üåç Weltkarte</strong>
                                        </label>
                                    </div>
                                    <input type="hidden" asp-for="IsWorldMap" value="true" />
                                }
                                else
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="IsWorldMap" id="isWorldMapTrue" value="true"
                                               checked="@Model.IsWorldMap" onchange="toggleMapTypeFields()">
                                        <label class="form-check-label" for="isWorldMapTrue">
                                            <strong>üåç Weltkarte</strong>
                                            <small class="d-block text-muted">Zeigt die gesamte Welt eines Acts. Kann Region-Marker enthalten.</small>
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="IsWorldMap" id="isWorldMapFalse" value="false"
                                               checked="@(!Model.IsWorldMap)" onchange="toggleMapTypeFields()">
                                        <label class="form-check-label" for="isWorldMapFalse">
                                            <strong>üó∫Ô∏è Detail-Karte</strong>
                                            <small class="d-block text-muted">Zeigt eine spezifische Region.</small>
                                        </label>
                                    </div>
                                }
                            </div>

                            <!-- Image Upload (Optional) -->
                            <div class="mb-4">
                                <label for="imageFile" class="form-label">
                                    <i class="fas fa-image"></i> Neues Kartenbild hochladen (optional)
                                </label>
                                <input type="file" class="form-control" id="imageFile" name="imageFile" accept="image/*" onchange="previewImage(event)">
                                <small class="text-muted">Leer lassen, um das aktuelle Bild beizubehalten</small>

                                <!-- Image Preview -->
                                <div id="imagePreview" class="mt-3" style="display: none;">
                                    <img id="preview" src="#" alt="Vorschau" style="max-width: 100%; max-height: 400px; border: 2px solid #d4c4a8; border-radius: 8px;" />
                                </div>
                            </div>

                            <!-- Child Maps Info (if World Map) -->
                            @if (Model.IsWorldMap && Model.ChildMaps.Any())
                            {
                                <div class="alert alert-info">
                                    <h6><i class="fas fa-sitemap"></i> Diese Weltkarte hat @Model.ChildMaps.Count Detail-Karte(n):</h6>
                                    <ul class="mb-0">
                                        @foreach (var child in Model.ChildMaps)
                                        {
                                            <li><strong>@child.Name</strong></li>
                                        }
                                    </ul>
                                </div>
                            }

                            <!-- Form Actions -->
                            <div class="d-flex gap-3 justify-content-end">
                                <a asp-action="ManageMaps" class="btn btn-secondary">
                                    <i class="fas fa-times"></i> Abbrechen
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> √Ñnderungen speichern
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Help Slide-In Panel -->
<div id="helpPanel" class="help-slide-panel">
    <div class="help-panel-header">
        <h4><i class="fas fa-question-circle"></i> Karten-Hierarchie Hilfe</h4>
        <button type="button" class="btn-close btn-close-white" onclick="toggleHelpPanel()"></button>
    </div>
    <div class="help-panel-body">
        <h5>üìò Konzept</h5>
        <p>Das Karten-System unterst√ºtzt eine 2-Ebenen-Hierarchie:</p>

        <div class="help-section">
            <h6>üåç Weltkarten (Ebene 1)</h6>
            <ul>
                <li>Zeigen die gesamte Welt eines Acts</li>
                <li>Pro Act gibt es <strong>genau eine</strong> Weltkarte</li>
                <li>Auf Weltkarten k√∂nnen Polygon-Regionen gezeichnet werden</li>
                <li>Diese Regionen verlinken zu Detail-Karten</li>
            </ul>
        </div>

        <div class="help-section">
            <h6>üó∫Ô∏è Detail-Karten (Ebene 2)</h6>
            <ul>
                <li>Zeigen eine spezifische Region im Detail</li>
                <li>Werden automatisch der Weltkarte des Acts zugeordnet</li>
                <li>Auf Detail-Karten k√∂nnen Quest-Marker gesetzt werden</li>
                <li>Der Name ist gleichzeitig der Regions-Name</li>
            </ul>
        </div>

        <h5 class="mt-4">üéØ Workflow</h5>
        <ol>
            <li><strong>Weltkarte erstellen:</strong> W√§hle "Weltkarte" und lade das Weltkartenbild hoch</li>
            <li><strong>Detail-Karten erstellen:</strong> W√§hle "Detail-Karte" und gib den Regionsnamen ein (z.B. "K√∂nigreich Nord")</li>
            <li><strong>Regionen zeichnen:</strong> √ñffne "Karten verwalten" ‚Üí üìã "Regionen verwalten" und zeichne Polygone auf der Weltkarte</li>
            <li><strong>Regionen verlinken:</strong> Verkn√ºpfe jedes Polygon mit der passenden Detail-Karte</li>
        </ol>

        <div class="alert alert-info mt-3">
            <strong>üí° Tipp:</strong> Der Name der Detail-Karte (z.B. "Nordreich-Karte") wird als Regions-Name verwendet. W√§hle aussagekr√§ftige Namen!
        </div>
    </div>
</div>

<style>
.help-slide-panel {
    position: fixed;
    right: -500px;
    top: 0;
    width: 450px;
    height: 100vh;
    background: white;
    box-shadow: -4px 0 12px rgba(0, 0, 0, 0.2);
    z-index: 9999;
    transition: right 0.3s ease-in-out;
    overflow-y: auto;
}

.help-slide-panel.open {
    right: 0;
}

.help-panel-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 1.5rem;
    display: flex;
    justify-content-between;
    align-items-center;
    position: sticky;
    top: 0;
    z-index: 1;
}

.help-panel-header h4 {
    margin: 0;
    font-size: 1.25rem;
}

.help-panel-body {
    padding: 1.5rem;
}

.help-section {
    background: #f8f9fa;
    padding: 1rem;
    border-radius: 8px;
    margin-bottom: 1rem;
    border-left: 4px solid #667eea;
}

.help-section h6 {
    color: #667eea;
    margin-bottom: 0.75rem;
}

.help-section ul {
    margin-bottom: 0;
    padding-left: 1.5rem;
}

.help-section li {
    margin-bottom: 0.5rem;
}
</style>

@section Scripts {
    <script>
        function toggleHelpPanel() {
            const panel = document.getElementById('helpPanel');
            panel.classList.toggle('open');
        }

        function toggleMapTypeFields() {
            // Nothing to toggle anymore - ParentMapId is auto-assigned
        }

        function previewImage(event) {
            const preview = document.getElementById('preview');
            const previewContainer = document.getElementById('imagePreview');
            const file = event.target.files[0];

            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    previewContainer.style.display = 'block';
                };
                reader.readAsDataURL(file);
            } else {
                previewContainer.style.display = 'none';
            }
        }
    </script>
}
