@model Suendenbock_App.Models.ViewModels.EditMapViewModel
@{
    ViewData["Title"] = "Karte bearbeiten";
}

<div class="admin-container">
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card shadow">
                    <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                        <h3 class="mb-0"><i class="fas fa-edit"></i> Karte bearbeiten</h3>
                    </div>
                    <div class="card-body">
                        <!-- Current Image Preview -->
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="mb-4">
                                <label class="form-label"><i class="fas fa-image"></i> Aktuelles Kartenbild:</label>
                                <div>
                                    <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 100%; max-height: 300px; border: 2px solid #d4c4a8; border-radius: 8px;" />
                                </div>
                            </div>
                        }

                        <form asp-action="EditMap" method="post" enctype="multipart/form-data">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="ImageUrl" />
                            <input type="hidden" asp-for="CreatedAt" />

                            <!-- Act Selection -->
                            <div class="mb-3">
                                <label asp-for="ActId" class="form-label">
                                    <i class="fas fa-book"></i> Zu welchem Act geh√∂rt diese Karte? *
                                </label>
                                <select asp-for="ActId" class="form-select" required>
                                    <option value="">-- Act ausw√§hlen --</option>
                                    @foreach (var act in Model.Acts)
                                    {
                                        <option value="@act.Id" selected="@(act.Id == Model.ActId)">Act @act.ActNumber: @act.Name</option>
                                    }
                                </select>
                            </div>

                            <!-- Map Name -->
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label">
                                    <i class="fas fa-signature"></i> Karten-Name *
                                </label>
                                <input asp-for="Name" class="form-control" placeholder="z.B. Weltkarte von B√∂hmen" required />
                                <small class="text-muted">Der Hauptname der Karte</small>
                            </div>

                            <!-- Map Type -->
                            <div class="mb-4">
                                <label class="form-label">
                                    <i class="fas fa-layer-group"></i> Karten-Typ *
                                </label>
                                @if (Model.ChildMaps.Any())
                                {
                                    <div class="alert alert-warning">
                                        <i class="fas fa-exclamation-triangle"></i> Diese Karte hat <strong>@Model.ChildMaps.Count Detail-Karte(n)</strong> und kann nicht zu einer Detail-Karte ge√§ndert werden.
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="IsWorldMap" id="isWorldMapTrue" value="true" checked disabled>
                                        <label class="form-check-label" for="isWorldMapTrue">
                                            <strong>üåç Weltkarte</strong>
                                        </label>
                                    </div>
                                    <input type="hidden" asp-for="IsWorldMap" value="true" />
                                }
                                else
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="IsWorldMap" id="isWorldMapTrue" value="true"
                                               checked="@Model.IsWorldMap" onchange="toggleMapTypeFields()">
                                        <label class="form-check-label" for="isWorldMapTrue">
                                            <strong>üåç Weltkarte</strong>
                                            <small class="d-block text-muted">Zeigt die gesamte Welt eines Acts. Kann Region-Marker enthalten.</small>
                                        </label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="IsWorldMap" id="isWorldMapFalse" value="false"
                                               checked="@(!Model.IsWorldMap)" onchange="toggleMapTypeFields()">
                                        <label class="form-check-label" for="isWorldMapFalse">
                                            <strong>üó∫Ô∏è Detail-Karte</strong>
                                            <small class="d-block text-muted">Zeigt eine spezifische Region.</small>
                                        </label>
                                    </div>
                                }
                            </div>

                            <!-- Region Name (only for Detail Maps) -->
                            <div class="mb-3" id="regionNameGroup" style="display: @(Model.IsWorldMap ? "none" : "block");">
                                <label asp-for="RegionName" class="form-label">
                                    <i class="fas fa-map-marked-alt"></i> Regions-Name *
                                </label>
                                <input asp-for="RegionName" class="form-control" placeholder="z.B. K√∂nigreich Nord" />
                                <small class="text-muted">Der Name der Region, die diese Detail-Karte zeigt</small>
                            </div>

                            <!-- Parent Map (only for Detail Maps) -->
                            <div class="mb-4" id="parentMapGroup" style="display: @(Model.IsWorldMap ? "none" : "block");">
                                <label asp-for="ParentMapId" class="form-label">
                                    <i class="fas fa-sitemap"></i> √úbergeordnete Weltkarte *
                                </label>
                                <select asp-for="ParentMapId" class="form-select">
                                    <option value="">-- Weltkarte ausw√§hlen --</option>
                                    @foreach (var worldMap in Model.WorldMaps)
                                    {
                                        <option value="@worldMap.Id" selected="@(worldMap.Id == Model.ParentMapId)">@worldMap.DisplayName</option>
                                    }
                                </select>
                                <small class="text-muted">W√§hle die Weltkarte, zu der diese Detail-Karte geh√∂rt</small>
                            </div>

                            <!-- Image Upload (Optional) -->
                            <div class="mb-4">
                                <label for="imageFile" class="form-label">
                                    <i class="fas fa-image"></i> Neues Kartenbild hochladen (optional)
                                </label>
                                <input type="file" class="form-control" id="imageFile" name="imageFile" accept="image/*" onchange="previewImage(event)">
                                <small class="text-muted">Leer lassen, um das aktuelle Bild beizubehalten</small>

                                <!-- Image Preview -->
                                <div id="imagePreview" class="mt-3" style="display: none;">
                                    <img id="preview" src="#" alt="Vorschau" style="max-width: 100%; max-height: 400px; border: 2px solid #d4c4a8; border-radius: 8px;" />
                                </div>
                            </div>

                            <!-- Child Maps Info (if World Map) -->
                            @if (Model.IsWorldMap && Model.ChildMaps.Any())
                            {
                                <div class="alert alert-info">
                                    <h6><i class="fas fa-sitemap"></i> Diese Weltkarte hat @Model.ChildMaps.Count Detail-Karte(n):</h6>
                                    <ul class="mb-0">
                                        @foreach (var child in Model.ChildMaps)
                                        {
                                            <li><strong>@child.RegionName</strong> (@child.Name)</li>
                                        }
                                    </ul>
                                </div>
                            }

                            <!-- Form Actions -->
                            <div class="d-flex gap-3 justify-content-end">
                                <a asp-action="ManageMaps" class="btn btn-secondary">
                                    <i class="fas fa-times"></i> Abbrechen
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> √Ñnderungen speichern
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleMapTypeFields() {
            const isWorldMap = document.getElementById('isWorldMapTrue').checked;
            const regionNameGroup = document.getElementById('regionNameGroup');
            const parentMapGroup = document.getElementById('parentMapGroup');
            const regionNameInput = document.querySelector('[name="RegionName"]');
            const parentMapSelect = document.querySelector('[name="ParentMapId"]');

            if (isWorldMap) {
                regionNameGroup.style.display = 'none';
                parentMapGroup.style.display = 'none';
                regionNameInput.removeAttribute('required');
                parentMapSelect.removeAttribute('required');
                regionNameInput.value = '';
                parentMapSelect.value = '';
            } else {
                regionNameGroup.style.display = 'block';
                parentMapGroup.style.display = 'block';
                regionNameInput.setAttribute('required', 'required');
                parentMapSelect.setAttribute('required', 'required');
            }
        }

        function previewImage(event) {
            const preview = document.getElementById('preview');
            const previewContainer = document.getElementById('imagePreview');
            const file = event.target.files[0];

            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    previewContainer.style.display = 'block';
                };
                reader.readAsDataURL(file);
            } else {
                previewContainer.style.display = 'none';
            }
        }
    </script>
}
