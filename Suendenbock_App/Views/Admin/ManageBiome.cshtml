@model IEnumerable<Suendenbock_App.Models.Domain.Biom>
@{
    ViewData["Title"] = "Biom-Verwaltung";
}

<header class="antique-header">
    <h3 style="text-align:center; color: #8b7355; font-family: 'MedievalSharp', cursive">
        Biom-Verwaltung
    </h3>
</header>

<div class="container-fluid mt-4">
    <!-- TempData Benachrichtigungen -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>‚úì Erfolg!</strong> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>‚úó Fehler!</strong> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Aktionen -->
    <div class="row mb-3">
        <div class="col-12">
            <a asp-action="CreateBiom" class="btn btn-success btn-lg">
                ‚ûï Neues Biom erstellen
            </a>
        </div>
    </div>

    <!-- Biome Tabelle -->
    @if (Model != null && Model.Any())
    {
        <div class="card shadow mb-4">
            <div class="card-header text-white" style="background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);">
                <h5 class="mb-0">
                    üåç Alle Biome
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th style="width: 60px;">ID</th>
                                <th>Name</th>
                                <th>Beschreibung</th>
                                <th style="width: 150px;">Farbe</th>
                                <th style="width: 150px;">Aktionen</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var biom in Model)
                            {
                                <tr>
                                    <td><strong>@biom.Id</strong></td>
                                    <td><strong>@biom.Name</strong></td>
                                    <td>@(string.IsNullOrEmpty(biom.Beschreibung) ? "-" : biom.Beschreibung)</td>
                                    <td>
                                        @if (biom.LightCard != null)
                                        {
                                            <div style="display: flex; align-items: center; gap: 8px;">
                                                <div style="width: 30px; height: 30px; background-color: @biom.LightCard.Farbcode; border: 2px solid #333; border-radius: 4px;"></div>
                                                <span>@biom.LightCard.Bezeichnung</span>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Keine Farbe</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="EditBiom" asp-route-id="@biom.Id" class="btn btn-sm btn-primary" title="Bearbeiten">
                                                ‚úèÔ∏è
                                            </a>
                                            <form asp-action="DeleteBiom" asp-route-id="@biom.Id" method="post" class="d-inline"
                                                  onsubmit="return confirm('Bist du sicher, dass du das Biom \'@biom.Name\' l√∂schen m√∂chtest?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-danger" title="L√∂schen">
                                                    üóëÔ∏è
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            Keine Biome gefunden. Erstelle dein erstes Biom!
        </div>
    }

    <!-- Zur√ºck-Button -->
    <div class="row mt-4 mb-4">
        <div class="col-12 text-center">
            <a asp-action="Index" class="btn btn-secondary btn-lg shadow">
                Zur√ºck zur Admin-√úbersicht
            </a>
        </div>
    </div>
</div>
