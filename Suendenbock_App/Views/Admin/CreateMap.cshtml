@model Suendenbock_App.Models.ViewModels.CreateMapViewModel
@{
    ViewData["Title"] = "Neue Karte erstellen";
}

<div class="admin-container">
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card shadow">
                    <div class="card-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white;">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="mb-0"><i class="fas fa-map"></i> Neue Karte erstellen</h3>
                            <button type="button" class="btn btn-sm btn-light" onclick="toggleHelpPanel()" title="Hilfe anzeigen">
                                <i class="fas fa-question-circle"></i> Hilfe
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <form asp-action="CreateMap" method="post" enctype="multipart/form-data">
                            <!-- Act Selection -->
                            <div class="mb-3">
                                <label asp-for="ActId" class="form-label">
                                    <i class="fas fa-book"></i> Zu welchem Act geh√∂rt diese Karte? *
                                </label>
                                <select asp-for="ActId" class="form-select" required>
                                    <option value="">-- Act ausw√§hlen --</option>
                                    @foreach (var act in Model.Acts)
                                    {
                                        <option value="@act.Id">Act @act.ActNumber: @act.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="ActId" class="text-danger"></span>
                            </div>

                            <!-- Map Name -->
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label">
                                    <i class="fas fa-signature"></i> Karten-Name *
                                </label>
                                <input asp-for="Name" class="form-control" placeholder="z.B. Weltkarte von B√∂hmen" required />
                                <span asp-validation-for="Name" class="text-danger"></span>
                                <small class="text-muted">Der Hauptname der Karte</small>
                            </div>

                            <!-- Map Type -->
                            <div class="mb-4">
                                <label class="form-label">
                                    <i class="fas fa-layer-group"></i> Karten-Typ *
                                </label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="IsWorldMap" id="isWorldMapTrue" value="true" checked onchange="toggleMapTypeFields()">
                                    <label class="form-check-label" for="isWorldMapTrue">
                                        <strong>üåç Weltkarte</strong>
                                        <small class="d-block text-muted">Zeigt die gesamte Welt eines Acts. Kann Region-Marker enthalten, die zu Detail-Karten f√ºhren.</small>
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="IsWorldMap" id="isWorldMapFalse" value="false" onchange="toggleMapTypeFields()">
                                    <label class="form-check-label" for="isWorldMapFalse">
                                        <strong>üó∫Ô∏è Detail-Karte</strong>
                                        <small class="d-block text-muted">Zeigt eine spezifische Region. Muss einer Weltkarte untergeordnet sein und hat einen Regionsnamen.</small>
                                    </label>
                                </div>
                                <span asp-validation-for="IsWorldMap" class="text-danger"></span>
                                <div id="detailMapWarning" class="alert alert-warning mt-2" style="display: none;">
                                    <i class="fas fa-exclamation-triangle"></i>
                                    <strong>Achtung:</strong> Der ausgew√§hlte Act hat noch keine Weltkarte. Bitte erstelle zuerst eine Weltkarte!
                                </div>
                            </div>

                            <!-- Image Upload -->
                            <div class="mb-4">
                                <label for="imageFile" class="form-label">
                                    <i class="fas fa-image"></i> Kartenbild hochladen *
                                </label>
                                <input type="file" class="form-control" id="imageFile" name="imageFile" accept="image/*" required onchange="previewImage(event)">
                                <small class="text-muted">Unterst√ºtzte Formate: JPG, PNG, GIF. Empfohlene Aufl√∂sung: mindestens 1920x1080px</small>

                                <!-- Image Preview -->
                                <div id="imagePreview" class="mt-3" style="display: none;">
                                    <img id="preview" src="#" alt="Vorschau" style="max-width: 100%; max-height: 400px; border: 2px solid #d4c4a8; border-radius: 8px;" />
                                </div>
                            </div>

                            <!-- Form Actions -->
                            <div class="d-flex gap-3 justify-content-end">
                                <a asp-action="ManageMaps" class="btn btn-secondary">
                                    <i class="fas fa-times"></i> Abbrechen
                                </a>
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-save"></i> Karte erstellen
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Help Card -->
                <div class="card shadow mt-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-question-circle"></i> Hilfe: Hierarchisches Karten-System</h5>
                    </div>
                    <div class="card-body">
                        <h6><strong>Schritt 1: Weltkarte erstellen</strong></h6>
                        <p>Erstelle zuerst eine <strong>Weltkarte</strong> f√ºr deinen Act. Diese zeigt die gesamte Welt.</p>

                        <h6 class="mt-3"><strong>Schritt 2: Detail-Karten erstellen</strong></h6>
                        <p>Erstelle <strong>Detail-Karten</strong> f√ºr einzelne Regionen und ordne sie der Weltkarte unter.</p>

                        <h6 class="mt-3"><strong>Schritt 3: Region-Marker setzen</strong></h6>
                        <p>√ñffne die Weltkarte im Spielmodus und setze <strong>Region-Marker</strong>, die zur jeweiligen Detail-Karte verlinken.</p>

                        <div class="alert alert-success mt-3 mb-0">
                            <strong>üí° Tipp:</strong> Bestehende einzelne Karten k√∂nnen √ºber "Karten-Verwaltung ‚Üí üåç" zu Weltkarten konvertiert werden!
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Help Slide-In Panel -->
<div id="helpPanel" class="help-slide-panel">
    <div class="help-panel-header">
        <h4><i class="fas fa-question-circle"></i> Karten-Hierarchie Hilfe</h4>
        <button type="button" class="btn-close btn-close-white" onclick="toggleHelpPanel()"></button>
    </div>
    <div class="help-panel-body">
        <h5>üìò Konzept</h5>
        <p>Das Karten-System unterst√ºtzt eine 2-Ebenen-Hierarchie:</p>

        <div class="help-section">
            <h6>üåç Weltkarten (Ebene 1)</h6>
            <ul>
                <li>Zeigen die gesamte Welt eines Acts</li>
                <li>Pro Act gibt es <strong>genau eine</strong> Weltkarte</li>
                <li>Auf Weltkarten k√∂nnen Polygon-Regionen gezeichnet werden, diese Regionen verlinken zu Detail-Karten</li>
                <li>alle bisherigen Markertypen k√∂nnen auch eingestellt werden</li>
            </ul>
        </div>

        <div class="help-section">
            <h6>üó∫Ô∏è Detail-Karten (Ebene 2)</h6>
            <ul>
                <li>Zeigen eine spezifische Region im Detail</li>
                <li>M√ºssen einer Weltkarte zugeordnet durch Angabe des Aktes</li>
                <li>Auf Detail-Karten k√∂nnen alle Markertypen gesetzt werden</li>
            </ul>
        </div>

        <h5 class="mt-4">üéØ Workflow</h5>
        <ol>
            <li><strong>Weltkarte erstellen:</strong> W√§hle "Weltkarte" und lade das Weltkartenbild hoch</li>
            <li><strong>Detail-Karten erstellen:</strong> W√§hle "Detail-Karte" und gib den Regionsnamen ein (z.B. "Gildenhaus")</li>
            <li><strong>Regionen zeichnen:</strong> √ñffne "Karten verwalten" ‚Üí üìã "Regionen verwalten" und zeichne Polygone auf der Weltkarte</li>
            <li><strong>Regionen verlinken:</strong> Verkn√ºpfe jedes Polygon mit der passenden Detail-Karte</li>
        </ol>
    </div>
</div>

<style>
.help-slide-panel {
    position: fixed;
    right: -500px;
    top: 0;
    width: 450px;
    height: 100vh;
    background: white;
    box-shadow: -4px 0 12px rgba(0, 0, 0, 0.2);
    z-index: 9999;
    transition: right 0.3s ease-in-out;
    overflow-y: auto;
}

.help-slide-panel.open {
    right: 0;
}

.help-panel-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: sticky;
    top: 0;
    z-index: 1;
}

.help-panel-header h4 {
    margin: 0;
    font-size: 1.25rem;
}

.help-panel-body {
    padding: 1.5rem;
}

.help-section {
    background: #f8f9fa;
    padding: 1rem;
    border-radius: 8px;
    margin-bottom: 1rem;
    border-left: 4px solid #667eea;
}

.help-section h6 {
    color: #667eea;
    margin-bottom: 0.75rem;
}

.help-section ul {
    margin-bottom: 0;
    padding-left: 1.5rem;
}

.help-section li {
    margin-bottom: 0.5rem;
}
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function toggleHelpPanel() {
            const panel = document.getElementById('helpPanel');
            panel.classList.toggle('open');
        }

        // Lade Acts mit Weltkarten-Info
        const actsWithWorldMaps = @Html.Raw(Json.Serialize(Model.Acts.Select(a => new {
            Id = a.Id,
            HasWorldMap = Model.WorldMaps.Any(wm => wm.DisplayName.StartsWith("Act " + a.ActNumber))
        })));

        function toggleMapTypeFields() {
            const actId = parseInt(document.querySelector('[name="ActId"]').value);
            const isDetailMap = document.getElementById('isWorldMapFalse').checked;
            const warningDiv = document.getElementById('detailMapWarning');

            if (isDetailMap && actId) {
                const actInfo = actsWithWorldMaps.find(a => a.Id === actId);
                if (actInfo && !actInfo.HasWorldMap) {
                    warningDiv.style.display = 'block';
                } else {
                    warningDiv.style.display = 'none';
                }
            } else {
                warningDiv.style.display = 'none';
            }
        }

        // Event-Listener f√ºr Act-Auswahl
        document.addEventListener('DOMContentLoaded', function() {
            const actSelect = document.querySelector('[name="ActId"]');
            if (actSelect) {
                actSelect.addEventListener('change', toggleMapTypeFields);
            }
        });

        function previewImage(event) {
            const preview = document.getElementById('preview');
            const previewContainer = document.getElementById('imagePreview');
            const file = event.target.files[0];

            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    previewContainer.style.display = 'block';
                };
                reader.readAsDataURL(file);
            } else {
                previewContainer.style.display = 'none';
            }
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            toggleMapTypeFields();
        });
    </script>
}
