@model AdminViewModel
<h1>Admin-Dashboard</h1>
<div class="row">
    <div class="col-4">
        <div class="card m-1 p-2">
            <a asp-controller="Character" asp-action="CreateForm" class="btn btn-outline-success">neuer Charakter</a>
            <table>
                <thead>
                    <tr>
                        <th>Vorname</th>
                        <th>Nachname</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var character in Model.Characters)
                        {
                            <tr>
                                <td>@character.Vorname</td>
                                <td>@character.Nachname</td>
                                <td>
                                    <a asp-controller="Character" asp-action="EditForm" asp-route-id="@character.Id" class="btn btn-outline-primary">Bearbeiten</a>
                                    <a asp-controller="Character" asp-action="Delete" asp-route-id="@character.Id" class="btn btn-outline-danger">Löschen</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-4">
        <div class="card m-1 p-2">
            <a asp-controller="MagicClass" asp-action="CreateForm" class="btn btn-outline-success">neue Magieklasse</a>
            <table>
                <thead>
                    <tr>
                        <th>Bezeichnung</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var magicClass in Model.MagicClasses)
                        {
                            <tr>
                                <td>@magicClass.Bezeichnung</td>
                                <td>
                                    <a asp-controller="Character" asp-action="EditForm" asp-route-id="@magicClass.Id" class="btn btn-outline-primary">Bearbeiten</a>
                                    <a asp-controller="Character" asp-action="Delete" asp-route-id="@magicClass.Id" class="btn btn-outline-danger">Löschen</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-4">
        <div class="card m-1 p-2">
            <a asp-controller="Guild" asp-action="CreateForm" class="btn btn-outline-success">neue Gilde</a>
            <table>
                <thead>
                    <tr>
                        <th>Bezeichnung</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
					@{
						foreach (var guild in Model.Guilds)
						{
							<tr>
								<td>@guild.Name</td>
								<td>
									<a asp-controller="Character" asp-action="EditForm" asp-route-id="@guild.Id" class="btn btn-outline-primary">Bearbeiten</a>
									<a asp-controller="Character" asp-action="Delete" asp-route-id="@guild.Id" class="btn btn-outline-danger">Löschen</a>
								</td>
							</tr>
						}
					}
                </tbody>
            </table>
        </div>
    </div>
</div>



