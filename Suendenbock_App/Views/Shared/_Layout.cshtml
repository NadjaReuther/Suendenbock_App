<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Suendenbock_App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Suendenbock_App.styles.css" asp-append-version="true" />
    <link href="/css/components.css" rel="stylesheet" />
    <link href="/css/animations.css" rel="stylesheet" />
    <link href="/css/antique-theme.css" rel="stylesheet" />
    <link href="~/css/wysiwyg-editor.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=MedievalSharp&family=Uncial+Antiqua&family=Cinzel:wght@400;600&display=swap" rel="stylesheet">
    <!-- Material Symbols Icons -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Hidden Fields für Global SignalR -->
    @if (User.Identity?.IsAuthenticated == true)
    {
        @* ActId wird über ViewBag gesetzt oder aus aktiver Session gelesen *@
        <input type="hidden" id="global-act-id" value="@ViewBag.CurrentActId" />
        <input type="hidden" id="global-user-name" value="@User.Identity.Name" />
    }

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Sündenbock 1618</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Glossary" asp-action="Browse">
                                    📚 Glossar
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Monster" asp-action="Overview">
                                    👹 Bestiarium
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Character" asp-action="Overview">
                                    👤 Charaktere
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Guild" asp-action="Overview">
                                    🏰 Gilden
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Infanterie" asp-action="Overview">
                                    ⚔️ Infanterien
                                </a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Achievement Notifications -->
    @await Html.PartialAsync("_AchievementNotification")

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Suendenbock_App - Author: acidlady
        </div>
    </footer>

    <!-- Bildvergrößerungs-Modal -->
    <div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-xl">
            <div class="modal-content" style="background: transparent; border: none;">
                <div class="modal-body p-0" style="position: relative;">
                    <button type="button" class="btn-close btn-close-white position-absolute top-0 end-0 m-3" data-bs-dismiss="modal" aria-label="Schließen" style="z-index: 1050; background-color: rgba(0,0,0,0.5); border-radius: 50%; padding: 10px;"></button>
                    <img id="modalImage" src="" alt="" class="img-fluid w-100" style="border-radius: 8px; max-height: 90vh; object-fit: contain;">
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/39.0.1/classic/ckeditor.js"></script>

    <!-- SignalR Client Library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>

    <!-- Global SignalR Connection (auf allen Seiten) -->
    @if (User.Identity?.IsAuthenticated == true)
    {
        <script src="~/js/global-signalr.js" asp-append-version="true"></script>
    }

    <!-- Bildvergrößerungs-Script -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Alle img-Tags finden (außer Avatar-Icons und kleine Bilder)
            const images = document.querySelectorAll('img:not(.character-seal):not(.navbar-brand img):not([data-no-zoom])');
            const modal = new bootstrap.Modal(document.getElementById('imageModal'));
            const modalImage = document.getElementById('modalImage');

            images.forEach(function(img) {
                // Cursor als Pointer setzen
                img.style.cursor = 'pointer';
                img.title = 'Klicken zum Vergrößern';

                // Click-Event hinzufügen
                img.addEventListener('click', function(e) {
                    // Verhindere Standard-Verhalten und Link-Navigation
                    e.preventDefault();
                    e.stopPropagation();

                    // Bild-URL und Alt-Text ins Modal laden
                    modalImage.src = img.src;
                    modalImage.alt = img.alt || 'Vergrößertes Bild';

                    // Modal anzeigen
                    modal.show();
                });
            });

            // ESC-Taste zum Schließen
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    modal.hide();
                }
            });

            // Klick auf das Modal-Hintergrundbild zum Schließen
            document.getElementById('imageModal').addEventListener('click', function(e) {
                if (e.target.id === 'imageModal' || e.target.classList.contains('modal-body')) {
                    modal.hide();
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
