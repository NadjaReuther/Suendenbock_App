@{
    var action = ViewContext.RouteData.Values["action"]?.ToString();

    if (action == "Form")
    {
        if (User.IsInRole("Admin"))
        {
            Layout = "_AdminFormLayout";
        }
        else if (User.IsInRole("Spieler"))
        {
            Layout = "_PlayerFormLayout";
        }
    }
    else if (User.IsInRole("Spieler"))
    {
        Layout = "_PlayerLayout";
    }
    else
    {
        Layout = "_Layout";
    }
}
