    <section class="stats-section">
        <div class="stats-parchment">
            <div class="parchment-header">
                <h2 class="stats-title">Reichsstatistiken</h2>
                <div class="seal-decoration">
                    <svg width="60" height="60" viewBox="0 0 60 60">
                        <circle cx="30" cy="30" r="25" fill="#8b0000"/>
                        <circle cx="30" cy="30" r="18" fill="#a52a2a"/>
                        <text x="30" y="35" text-anchor="middle" font-size="16" fill="#d4af37">👑</text>
                    </svg>
                </div>
            </div>

            <div class="stats-content">
                <div class="stats-grid">
                    <div class="stat-item">
                        <div class="stat-icon">⚔️</div>
                        <span class="stat-number" data-target="@(Model.GenderStats.ContainsKey("männlich") ? Model.GenderStats["männlich"] : 0)">0</span>
                        <span class="stat-label">Männliche Charaktere</span>
                    </div>

                    <div class="stat-item">
                        <div class="stat-icon">🌹</div>
                        <span class="stat-number" data-target="@(Model.GenderStats.ContainsKey("weiblich") ? Model.GenderStats["weiblich"] : 0)">0</span>
                        <span class="stat-label">Weibliche Charaktere</span>
                    </div>

                    <div class="stat-item">
                        <div class="stat-icon">🔮</div>
                        <span class="stat-number" data-target="@Model.Characters.Where(c => c.CharacterMagicClasses.Any()).Count()">0</span>
                        <span class="stat-label">Aktive Zauberer</span>
                    </div>

                    <div class="stat-item">
                        <div class="stat-icon">🏰</div>
                        <span class="stat-number" data-target="@Model.Guilds.Count">0</span>
                        <span class="stat-label">Gilden & Bünde</span>
                    </div>
                </div>

                <!-- Magiklassen-Verteilung -->
                <div class="magic-distribution">
                    <h3>Verteilung der Magieschulen</h3>
                    <div class="distribution-bars">
                        @foreach (var stat in Model.MagicClassStats.Take(5))
                        {
                                <div class="distribution-item">
                                    <span class="distribution-label">@stat.Key</span>
                                    <div class="distribution-bar">
                                        <div class="distribution-fill" style="width: @(Math.Max(5, (stat.Value * 100) / Math.Max(1, Model.MagicClassStats.Values.Max())))%"></div>
                                        <span class="distribution-value">@stat.Value</span>
                                    </div>
                                </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Neueste Charaktere -->
    <section class="recent-characters">
        <h2 class="section-title">
            <span class="title-decoration left">⚔️</span>
            Jüngst Registrierte
            <span class="title-decoration right">🛡️</span>
        </h2>

        <div class="character-scrolls">
            @foreach (var character in Model.Characters.Take(6))
            {
                    <div class="character-scroll" data-tilt>
                        <div class="scroll-header">
                            <div class="character-seal">@character.Vorname.FirstOrDefault()</div>
                        </div>
                        <div class="scroll-body">
                            <h4>@character.Vorname @character.Nachname</h4>
                            <p><strong>Geschlecht:</strong> @character.Geschlecht</p>
                            <p><strong>Gilde:</strong>Gilde</p>
                            <p><strong>Religion:</strong>Religion</p>

                            @if (character.CharacterMagicClasses.Any())
                            {
                                    <div class="character-magic">
                                        <small>Magie: @string.Join(", ", character.CharacterMagicClasses.Take(2).Select(cmc => cmc.MagicClass?.Bezeichnung))</small>
                                    </div>
                            }
                        </div>
                    </div>
            }
        </div>
    </section>
</div>

@section Scripts {
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                // Animierte Zahlen für Statistiken
                const numbers = document.querySelectorAll('.stat-number');
                numbers.forEach(number => {
                    const target = parseInt(number.getAttribute('data-target'));
                    let current = 0;
                    const increment = target / 50;

                    const timer = setInterval(() => {
                        current += increment;
                        if (current >= target) {
                            number.textContent = target;
                            clearInterval(timer);
                        } else {
                            number.textContent = Math.floor(current);
                        }
                    }, 50);
                });

                // Tilt-Effekt für Karten
                document.querySelectorAll('[data-tilt]').forEach(card => {
                    card.addEventListener('mousemove', (e) => {
                        const rect = card.getBoundingClientRect();
                        const x = e.clientX - rect.left;
                        const y = e.clientY - rect.top;

                        const centerX = rect.width / 2;
                        const centerY = rect.height / 2;

                        const rotateX = (y - centerY) / 10;
                        const rotateY = (centerX - x) / 10;

                        card.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) scale3d(1.05, 1.05, 1.05)`;
                    });

                    card.addEventListener('mouseleave', () => {
                        card.style.transform = 'perspective(1000px) rotateX(0deg) rotateY(0deg) scale3d(1, 1, 1)';
                    });
                });

                // Parallax für Dekorationen
                window.addEventListener('scroll', () => {
                    const scrolled = window.pageYOffset;
                    const decorations = document.querySelectorAll('.vintage-decorations > div');

                    decorations.forEach((decoration, index) => {
                        const speed = (index % 3 + 1) * 0.1;
                        decoration.style.transform += ` translateY(${scrolled * speed}px)`;
                    });
                });

                // Schwebende Animation für Dekorationen
                document.querySelectorAll('.vintage-decorations > div').forEach((decoration, index) => {
                    decoration.style.animation = `float ${3 + index}s ease-in-out infinite`;
                    decoration.style.animationDelay = `${index * 0.5}s`;
                });

                // Wolkenbruch Interaktivität
                initStormEffects();
            });

            function initStormEffects() {
                const lightning = document.querySelector('.lightning');
                const title = document.querySelector('.main-title');
                const stormContainer = document.querySelector('.storm-container');

                // Zufällige Blitz-Effekte
                setInterval(() => {
                    if (Math.random() < 0.3) { // 30% Chance alle 8 Sekunden
                        triggerLightning();
                    }
                }, 8000);

                // Dynamischer Regen basierend auf Mausposition
                document.addEventListener('mousemove', (e) => {
                    const mouseX = e.clientX / window.innerWidth;
                    const raindrops = document.querySelectorAll('.raindrop');

                    raindrops.forEach((drop, index) => {
                        if (index % 3 === 0) { // Nur jeden 3. Tropfen beeinflussen
                            const newLeft = parseFloat(drop.style.left) + (mouseX - 0.5) * 2;
                            drop.style.left = Math.max(0, Math.min(100, newLeft)) + '%';
                        }
                    });
                });

                // Klick-Effekt für zusätzliche Blitze
                title.addEventListener('click', () => {
                    triggerLightning();
                    createRainBurst();
                });

                function triggerLightning() {
                    // Blitz-Animation
                    lightning.style.animation = 'none';
                    lightning.offsetHeight; // Reflow trigger
                    lightning.style.animation = 'lightningFlash 0.5s';

                    // Bildschirm-Blitz
                    document.body.style.background = '#fff';
                    setTimeout(() => {
                        document.body.style.background = '';
                    }, 100);

                    // Titel-Effekt
                    title.style.textShadow = '0 0 20px #fff, 0 0 40px #ffd700, 0 0 60px #ffd700';
                    setTimeout(() => {
                        title.style.textShadow = '';
                    }, 300);

                    // Donner-Vibration (falls unterstützt)
                    if (navigator.vibrate) {
                        navigator.vibrate([100, 50, 100]);
                    }
                }

                function createRainBurst() {
                    const rain = document.querySelector('.rain');

                    // Temporäre zusätzliche Regentropfen erstellen
                    for (let i = 0; i < 20; i++) {
                        const drop = document.createElement('div');
                        drop.className = 'raindrop burst';
                        drop.style.left = Math.random() * 100 + '%';
                        drop.style.animationDelay = Math.random() * 0.5 + 's';
                        drop.style.background = 'linear-gradient(to bottom, rgba(173, 216, 230, 1), rgba(135, 206, 235, 0.8))';

                        rain.appendChild(drop);

                        // Nach Animation entfernen
                        setTimeout(() => {
                            if (drop.parentNode) {
                                drop.parentNode.removeChild(drop);
                            }
                        }, 2000);
                    }
                }

                // Wolken-Bewegung basierend auf Scroll
                window.addEventListener('scroll', () => {
                    const scrolled = window.pageYOffset;
                    const clouds = document.querySelectorAll('.cloud');

                    clouds.forEach((cloud, index) => {
                        const speed = (index + 1) * 0.05;
                        cloud.style.transform += ` translateX(${scrolled * speed}px)`;
                    });
                });
            }

            // Wetter-Zustand Toggle
            let isStormActive = true;
            function toggleStorm() {
                const stormContainer = document.querySelector('.storm-container');
                isStormActive = !isStormActive;

                if (isStormActive) {
                    stormContainer.style.opacity = '1';
                    stormContainer.style.animation = '';
                } else {
                    stormContainer.style.opacity = '0.3';
                    stormContainer.style.animation = 'none';
                }
            }

            // Optional: Wetter-Toggle Button hinzufügen (kann in der Navigation platziert werden)
            document.addEventListener('DOMContentLoaded', function() {
                // Erstelle Weather Toggle Button
                const weatherToggle = document.createElement('button');
                weatherToggle.innerHTML = '🌧️';
                weatherToggle.className = 'weather-toggle';
                weatherToggle.style.cssText = `
                    position: fixed;
                    top: 20px;
                    right: 20px;
                    z-index: 1000;
                    background: rgba(139, 115, 85, 0.8);
                    border: 2px solid #d4af37;
                    border-radius: 50%;
                    width: 50px;
                    height: 50px;
                    font-size: 1.5rem;
                    cursor: pointer;
                    transition: all 0.3s ease;
                `;

                weatherToggle.addEventListener('click', toggleStorm);
                weatherToggle.addEventListener('mouseenter', () => {
                    weatherToggle.style.background = 'rgba(212, 175, 55, 0.9)';
                    weatherToggle.style.transform = 'scale(1.1)';
                });
                weatherToggle.addEventListener('mouseleave', () => {
                    weatherToggle.style.background = 'rgba(139, 115, 85, 0.8)';
                    weatherToggle.style.transform = 'scale(1)';
                });

                document.body.appendChild(weatherToggle);
            });
        </script>
}
