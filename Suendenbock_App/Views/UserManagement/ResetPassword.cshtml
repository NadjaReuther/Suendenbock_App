<div class="container mt-4">
    <h2>Passwort zurücksetzen</h2>
    <p>Benutzer: <strong>@ViewBag.UserEmail</strong></p>

    <form method="post" asp-controller="UserManagement" asp-action="ResetPassword">
        <input type="hidden" name="id" value="@ViewBag.UserId" />

        <div class="mb-3">
            <label for="newPassword" class="form-label">Neues Passwort *</label>
            <input type="password" class="form-control" id="newPassword" name="newPassword" required minlength="6" />
        </div>

        <button type="submit" class="btn btn-warning">Passwort zurücksetzen</button>
        <a asp-action="Index" class="btn btn-secondary">Abbrechen</a>
    </form>
</div>
