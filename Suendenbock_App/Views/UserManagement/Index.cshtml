@model List<UserViewModel>

<div class="container mt-4">
    <h2>Benutzerverwaltung</h2>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-user-plus"></i> Neuer Benutzer
        </a>
        <a asp-action="TriggerOverview" class="btn btn-warning">
            <i class="fas fa-shield-alt"></i> Triggerpunkte verwalten
        </a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Email</th>
                <th>Rolle</th>
                <th>Anzahl Characters</th>
                <th>Aktionen</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                var displayEmail = string.IsNullOrEmpty(user.Email) ? "<span class='text-muted fst-italic'>(Keine E-Mail)</span>" : user.Email;
                var deleteWarning = user.CharacterCount > 0 ? $"Achtung: Benutzer hat {user.CharacterCount} Character(e). Wirklich löschen?" :
                                   "Sind Sie sicher, dass Sie diesen Benutzer löschen möchten?";

                <tr class="@(user.Role == "keine" && string.IsNullOrEmpty(user.Email) ? "table-warning" : "")">
                    <td>@Html.Raw(displayEmail)</td>
                    <td>
                        <span class="badge bg-@(user.Role == "Gott" ? "danger" : user.Role == "keine" ? "secondary" : "primary")">
                            @user.Role
                        </span>
                    </td>
                    <td>
                        @user.CharacterCount
                        @if (user.CharacterCount > 0)
                        {
                            <i class="fas fa-link text-warning" title="Benutzer hat verknüpfte Characters"></i>
                        }
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(user.Email))
                        {
                            <a asp-action="ResetPassword" asp-route-id="@user.Id" class="btn btn-sm btn-warning">
                                <i class="fas fa-key"></i> Passwort zurücksetzen
                            </a>
                        }
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm"
                           onclick="return confirm('@deleteWarning');">
                            <i class="fas fa-trash"></i> Löschen
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>