@model Suendenbock_App.Models.ViewModels.PollsPageViewModel
@{
    ViewData["Title"] = "Marktplatz der Meinungen";
}

<div class="polls-container">
    <!-- Header Section -->
    <div class="polls-header">
        <div class="header-content">
            <a asp-action="Index" class="back-link">
                <span class="material-symbols-outlined">arrow_back</span>
                <span>Zurück zur Halle</span>
            </a>
            <h1 class="page-title">Marktplatz der Meinungen</h1>
            <p class="page-subtitle">Stimme ab und forme die Zukunft des Reiches.</p>
        </div>

        @if(Model.IsAdmin)
        {
            <button class="btn-primary" id="createPollBtn">
                <span class="material-symbols-outlined">add_chart</span>
                Neue Umfrage starten
            </button>
        }
    </div>

    <!-- Polls Grid -->
    <div class="polls-grid">
        @foreach (var poll in Model.Polls)
        {
            <div class="poll-card @(poll.Status == "closed" ? "closed" : "")" data-poll-id="@poll.Id">
                <div class="poll-meta">
                    <div class="poll-badges">
                        <span class="poll-status @(poll.Status == "active" ? "active" : "inactive")">
                            @(poll.Status == "active" ? "Aktiv" : "Beendet")
                        </span>
                        <span class="poll-category">#@poll.Category</span>
                        <span class="poll-type">@(poll.AllowMultipleChoices ? "Mehrfachauswahl" : "Einfachauswahl")</span>
                    </div>

                    @if(poll.CanEdit)
                    {
                        <div class="poll-admin-actions">
                            @if(poll.Status == "active")
                            {
                                <button class="admin-action-btn close-poll-btn" data-poll-id="@poll.Id" title="Umfrage beenden">
                                    <span class="material-symbols-outlined">lock</span>
                                </button>
                            }
                            <button class="admin-action-btn edit-poll-btn" data-poll-id="@poll.Id" title="Umfrage bearbeiten">
                                <span class="material-symbols-outlined">edit</span>
                            </button>
                            <button class="admin-action-btn delete-poll-btn" data-poll-id="@poll.Id" title="Umfrage löschen">
                                <span class="material-symbols-outlined">delete</span>
                            </button>
                        </div>
                    }
                </div>

                <h2 class="poll-question">@poll.Question</h2>

                <div class="poll-options">
                    @foreach (var option in poll.Options)
                    {
                        var isUserChoice = poll.UserVotedOptionIds.Contains(option.Id);
                        <div class="poll-option-item" data-option-id="@option.Id">
                            <div class="option-header">
                                <div class="option-label">
                                    @if (isUserChoice)
                                    {
                                        <span class="material-symbols-outlined user-choice-icon">check_circle</span>
                                    }
                                    <span class="@(isUserChoice ? "user-choice-text" : "")">@option.Text</span>
                                </div>
                                <span class="option-stats">@option.Percentage.ToString("F0")% (@option.Votes)</span>
                            </div>
                            <div class="option-progress-bar">
                                <div class="option-progress-fill @(poll.Status == "closed" ? "inactive" : "")" style="width: @Math.Min(100, option.Percentage)%"></div>
                            </div>
                        </div>
                    }
                </div>

                <div class="poll-footer">
                    <div class="poll-voters-section">
                        <div class="poll-voters-header">
                            <span class="poll-voters-count">
                                <span class="material-symbols-outlined">groups</span>
                                @poll.TotalVoters Wähler insgesamt
                            </span>
                            @if (poll.VoterNames.Any())
                            {
                                <button class="toggle-voters-btn" data-poll-id="@poll.Id">
                                    <span class="material-symbols-outlined">expand_more</span>
                                </button>
                            }
                        </div>
                        @if (poll.VoterNames.Any())
                        {
                            <div class="poll-voters-list" data-poll-id="@poll.Id" style="display: none;">
                                @foreach (var voterName in poll.VoterNames)
                                {
                                    <span class="voter-badge">@voterName</span>
                                }
                            </div>
                        }
                    </div>
                    @if (poll.Status == "active")
                    {
                        <button class="vote-btn" data-poll-id="@poll.Id">
                            <span class="material-symbols-outlined">how_to_vote</span>
                            @(poll.UserVotedOptionIds.Any() ? "Stimme ändern" : "Stimme abgeben")
                        </button>
                    }
                </div>
            </div>
        }
    </div>
</div>

<!-- Vote Modal -->
<div id="voteModal" class="modal-overlay" style="display: none;">
    <div class="modal-content vote-modal">
        <div class="modal-header">
            <div>
                <h3 class="vote-modal-title" id="voteModalTitle"></h3>
                <p class="vote-modal-hint" id="voteModalHint"></p>
            </div>
            <button class="modal-close" onclick="closeVoteModal()">
                <span class="material-symbols-outlined">close</span>
            </button>
        </div>

        <div class="modal-body">
            <div class="vote-options-list" id="voteOptionsList">
                <!-- Options will be dynamically inserted here -->
            </div>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn-secondary" onclick="closeVoteModal()">
                Abbrechen
            </button>
            <button type="button" class="btn-primary" id="castVoteBtn">
                Wahl besiegeln
            </button>
        </div>
    </div>
</div>

<!-- Create Poll Modal -->
<div id="pollModal" class="modal-overlay" style="display: none;">
    <div class="modal-content poll-modal">
        <div class="modal-header">
            <h2 id="pollModalTitle">Volksbefragung starten</h2>
            <button class="modal-close" onclick="closePollModal()">
                <span class="material-symbols-outlined">close</span>
            </button>
        </div>

        <form id="pollForm">
            <input type="hidden" id="pollId" value="">

            <div class="modal-body">
                <div class="form-group">
                    <label for="pollQuestion">Die Frage ans Volk *</label>
                    <input type="text" id="pollQuestion" name="question" required class="form-control" placeholder="Worum geht es?">
                </div>

                <div class="toggle-group">
                    <div class="toggle-label">
                        <h4>Mehrfachauswahl erlauben?</h4>
                        <p>Können Bürger für mehrere Optionen stimmen?</p>
                    </div>
                    <label class="toggle-switch">
                        <input type="checkbox" id="allowMultiple" name="allowMultiple">
                        <span class="toggle-slider"></span>
                    </label>
                </div>

                <div class="form-group">
                    <label>Antwortmöglichkeiten *</label>
                    <div id="pollOptionsList">
                        <div class="poll-option-input">
                            <input type="text" class="form-control option-input" placeholder="Option 1" required>
                        </div>
                        <div class="poll-option-input">
                            <input type="text" class="form-control option-input" placeholder="Option 2" required>
                        </div>
                    </div>
                    <button type="button" class="add-option-btn" id="addOptionBtn">
                        <span class="material-symbols-outlined">add</span>
                        Option hinzufügen
                    </button>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn-secondary" onclick="closePollModal()">
                    Abbrechen
                </button>
                <button type="submit" class="btn-primary">
                    Verkünden
                </button>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/polls.css" />
    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
}

@section Scripts {
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/polls.js"></script>
}
